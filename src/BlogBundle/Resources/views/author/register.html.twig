{% extends "@Blog/bootstrap.layout.html.twig" %}

{% block title %}Регистрация{% endblock %}

{% block stylesheet %}
    {{ parent() }}

    <style>
        body {
            padding-bottom: 40px;
            background-color: #eee;
        }

        .registration-form {
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }

        .registration-form .h2,
        .registration-form .checkbox {
            margin-bottom: 10px;
        }

        .registration-form .checkbox {
            font-weight: normal;
        }

        .registration-form .form-control {
            position: relative;
            height: auto;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 5px;
        }

        .registration-form .form-control:focus {
            z-index: 2;
        }

        .registration-form button{
            margin-top: 5px;
            width: 100%;
        }
    </style>
{% endblock %}


{% block body %}
    {% include "@Blog/layer/flash-errors.html.twig" %}

    {{ form_start(registrationForm, {'attr':{'class': 'registration-form'}}) }}
    {{ form_errors(registrationForm) }}

    {{ form_widget(registrationForm.name, {'attr':{'class': 'form-control', 'placeholder': 'Имя'}}) }}
    {{ form_widget(registrationForm.login, {'attr':{'class': 'form-control', 'placeholder': 'Логин'}}) }}
    {{ form_widget(registrationForm.password, {'attr':{'class': 'form-control', 'placeholder': 'Пароль'}}) }}
    {{ form_widget(registrationForm.signUp, {'attr':{'class': 'btn btn-md btn-success'}, 'name': 'Зарегистрироваться'}) }}
    {{ form_end(registrationForm) }}
{% endblock %}
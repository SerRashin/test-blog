{% block stylesheet %}
    <style>
        .static-bar {
            position: fixed;
            left: 5px;
            top: 10px;
        }

        .alert-danger {
            width: 90%;
            margin: auto;
        }

        .static-bar a.btn {
            margin-bottom: 2px;
        }
    </style>
{% endblock %}

{% set user_id = app.session.get('current_user_id') %}
{% set returnTo = url(app.request.get('_route'), app.request.get('_route_params')) %}

<div class="static-bar">
    <a href="{{ path('blog_posts') }}" class="btn btn-primary" title="На главную">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    </a>
    <br>
    {% if user_id %}
        <a href="{{ path('add_post') }}" class="btn btn-success" title="Написать публикацию">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <br>
        <a href="{{ path('author_posts', {'author' : user_id }) }}" class="btn btn-info"
           title="Список моих публикаций">
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
        </a>
        <br>
        <a href="{{ path('blog_logout', {'returnTo' : returnTo}) }}" class="btn btn-warning" title="Выход">
            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a>
    {% else %}
        <a href="{{ path('blog_login', {'returnTo' : returnTo}) }}" class="btn btn-success" title="Вход">
            <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
        </a>
        <br>
        <a href="{{ path('blog_register') }}" class="btn btn-info" title="Регистрация">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </a>
    {% endif %}
</div>